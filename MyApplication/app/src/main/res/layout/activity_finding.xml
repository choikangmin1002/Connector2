<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Finding_activity">

    <TextView
        android:id="@+id/finding_for_finding_tv"
        android:layout_width="196dp"
        android:layout_height="112dp"
        android:layout_marginTop="52dp"
        android:text="forget your PW?"
        android:textColor="#009688"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/id_for_finding_scan"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_for_finding_scan"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginTop="228dp"
        android:ems="80"
        android:hint="ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email_for_finding_scan"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="80"
        android:hint="email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_for_finding_scan" />

    <Button
        android:id="@+id/go_finding_email_for_finding_button"
        android:layout_width="112dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="NEXT >"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/email_for_finding_scan"
        app:layout_constraintTop_toBottomOf="@+id/email_for_finding_scan" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 변경하려면\nID와 이메일을 입력해주세요. "
        app:layout_constraintStart_toStartOf="@+id/finding_for_finding_tv"
        app:layout_constraintTop_toBottomOf="@+id/finding_for_finding_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>