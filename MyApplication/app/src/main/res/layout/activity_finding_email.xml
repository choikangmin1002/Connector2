<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Finding_email_activity">


    <EditText
        android:id="@+id/code_for_finding_email_scan"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:ems="6"
        android:hint="인증번호 입력"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_email_for_finding_email_tv" />

    <TextView
        android:id="@+id/finding_email_for_finding_email_tv"
        android:layout_width="196dp"
        android:layout_height="112dp"
        android:layout_marginTop="96dp"
        android:text="Enter\nyour Code"
        android:textColor="#009688"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/code_for_finding_email_scan"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/go_finding_change_pw_for_finding_email_button"
        android:layout_width="112dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="NEXT >"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/code_for_finding_email_scan"
        app:layout_constraintTop_toBottomOf="@+id/code_for_finding_email_scan" />

    <TextView
        android:id="@+id/print_email_for_finding_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#12B6A7"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/finding_email_for_finding_email_tv"
        app:layout_constraintTop_toBottomOf="@+id/finding_email_for_finding_email_tv" />

    <TextView
        android:id="@+id/guide_email_for_finding_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호를 받으려면 '요청'을 누르세요. "
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/print_email_for_finding_email_tv"
        app:layout_constraintTop_toBottomOf="@+id/print_email_for_finding_email_tv" />

    <Button
        android:id="@+id/request_code_for_finding_email_button"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:text="요청"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/go_finding_change_pw_for_finding_email_button"
        app:layout_constraintStart_toStartOf="@+id/code_for_finding_email_scan" />

    <TextView
        android:id="@+id/request_guide_email_for_finding_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/request_code_for_finding_email_button"
        app:layout_constraintTop_toBottomOf="@+id/request_code_for_finding_email_button" />

</androidx.constraintlayout.widget.ConstraintLayout>