<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Log_in_activity">

    <EditText
        android:id="@+id/id_for_log_in_scan"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:ems="80"
        android:hint="ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/go_finding_for_log_in_button"
        android:layout_width="134dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:text="forget your PW?"
        android:textColor="#383C3C"
        android:textSize="8dp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/log_in_for_log_in_button"
        app:layout_constraintTop_toBottomOf="@+id/log_in_for_log_in_button" />

    <TextView
        android:id="@+id/log_in_for_log_in_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="LOG IN"
        android:textColor="#009688"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/id_for_log_in_scan"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pw_for_log_in_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:ems="80"
        android:hint="PW"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_for_log_in_scan" />

    <Button
        android:id="@+id/go_sign_up_for_log_in_button"
        android:layout_width="133dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:text="sign up"
        android:textColor="#383C3C"
        android:textSize="10dp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/log_in_for_log_in_button"
        app:layout_constraintTop_toBottomOf="@+id/log_in_for_log_in_button" />

    <Button
        android:id="@+id/log_in_for_log_in_button"
        android:layout_width="275dp"
        android:layout_height="56dp"
        android:layout_marginTop="68dp"
        android:text="LOG IN"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pw_for_log_in_scan" />

    <Switch
        android:id="@+id/remember_id_for_log_in_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="remember ID"
        app:layout_constraintStart_toStartOf="@+id/log_in_for_log_in_button"
        app:layout_constraintTop_toBottomOf="@+id/pw_for_log_in_scan" />

</androidx.constraintlayout.widget.ConstraintLayout>