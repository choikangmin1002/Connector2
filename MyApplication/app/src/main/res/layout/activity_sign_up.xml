<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up_activity">


    <TextView
        android:id="@+id/sign_up_for_sign_up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="80"
        android:text="SIGN UP"
        android:textColor="#009688"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/sign_up_id_scan"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_an_account_for_sign_up_button"
        android:layout_width="270dp"
        android:layout_height="67dp"
        android:layout_marginTop="68dp"
        android:text="Create an account"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/generation_for_sign_up_scan"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/generation_for_sign_up_scan"
        app:layout_constraintTop_toBottomOf="@+id/generation_for_sign_up_scan" />

    <EditText
        android:id="@+id/sign_up_id_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="152dp"
        android:hint="ID"
        android:ems="80"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/generation_for_sign_up_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="80"
        android:hint="기수"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/name_for_sign_up_scan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_for_sign_up_scan"
        app:layout_constraintTop_toBottomOf="@+id/name_for_sign_up_scan" />

    <EditText
        android:id="@+id/pw_for_sign_up_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="80"
        android:hint="PW"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_id_scan" />

    <EditText
        android:id="@+id/name_for_sign_up_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="80"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/pw_check_for_sign_up_scan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pw_check_for_sign_up_scan"
        app:layout_constraintTop_toBottomOf="@+id/pw_check_for_sign_up_scan" />

    <EditText
        android:id="@+id/pw_check_for_sign_up_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="80"
        android:hint="PW확인"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pw_for_sign_up_scan" />

    <RadioButton
        android:id="@+id/not_robot_for_sign_up_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="로봇이 아닙니다."
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/generation_for_sign_up_scan"
        app:layout_constraintTop_toBottomOf="@+id/generation_for_sign_up_scan" />


</androidx.constraintlayout.widget.ConstraintLayout>