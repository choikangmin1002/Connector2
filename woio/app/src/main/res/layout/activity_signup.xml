<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup_Activity">


    <TextView
        android:id="@+id/sign_up_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/amiko"
        android:text="SIGN UP"
        android:textColor="#009688"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_id_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_pw_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_id_scan" />

    <EditText
        android:id="@+id/sign_up_pw_check_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="PW확인"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_pw_scan" />

    <EditText
        android:id="@+id/sign_up_name_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_pw_check_scan"
        app:layout_constraintStart_toStartOf="@+id/sign_up_pw_check_scan"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_pw_check_scan" />

    <EditText
        android:id="@+id/sign_up_generation_scan"
        android:layout_width="273dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="기수"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_name_scan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sign_up_name_scan"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_name_scan" />


</androidx.constraintlayout.widget.ConstraintLayout>